@model IEnumerable<DemandeOffreEntreprise>
@{
    ViewData["Title"] = "List of Demandes";
}
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.NomCandidat)</th>
                    <th>@Html.DisplayNameFor(model => model.PrenomCandidat)</th>
                    <th>@Html.DisplayNameFor(model => model.TelephoneCandidat)</th>
                  


                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.NomCandidat" alt="@item.PrenomCandidat" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.PrenomCandidat)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TelephoneCandidat)
                        </td>
                       
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
